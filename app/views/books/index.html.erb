<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= form_with(url: books_path, local: true, method: :get) do |form| %>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, options_for_select(['Todos','Prestado','En_estante']) %>
  </div>

  <div class="actions">
    <%= form.submit 'Filtrar' %> 
  </div>

<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Status</th>
      <th>Loan date</th>
      <th>Return date</th>
      <th>Lent to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.loan_date %></td>
        <td><%= book.return_date %></td>
        <td><%= book.lent_to %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
